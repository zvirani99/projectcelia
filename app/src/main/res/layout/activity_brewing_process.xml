<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@color/primary"
    tools:context=".BrewingProcess">

<!--    Image of current process-->
    <ImageView
        android:id="@+id/brewing_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/coffeecup_white"
        />

<!--    Text of current process-->
    <TextView
        android:id="@+id/brewing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brewing_image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/onPrimary"
        android:textSize="18sp"
        android:text="Connecting to Device" />

<!--    Return to Home-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/brewing_gohome"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/brewing_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/secondary"
        android:text="Return Home"
        android:letterSpacing="0"
        android:textColor="@color/onSecondary"
        android:textSize="18sp"
        app:cornerRadius="32dp"
        app:strokeColor="@color/secondary"
        app:strokeWidth="2dp"
        android:visibility="gone"/>

</RelativeLayout>