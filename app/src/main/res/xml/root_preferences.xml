<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false" >

    <PreferenceCategory android:title="Account" app:iconSpaceReserved="false">

        <!--        Change Name-->
        <EditTextPreference
            android:dialogTitle="Enter your name"
            android:key="account_name"
            android:title="Your Name"
            app:iconSpaceReserved="false" />
        <!--        Change Email-->
        <EditTextPreference
            android:dialogTitle="Enter new email"
            android:key="account_password"
            android:title="Change Email"
            app:iconSpaceReserved="false"/>
        <!--        Change Password-->
        <EditTextPreference
            android:dialogTitle="Enter new password"
            android:key="profile_password"
            android:title="Change Password"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>
    <PreferenceCategory android:title="Notifications" app:iconSpaceReserved="false">

        <!--        Brewing Status-->
        <SwitchPreference
            android:defaultValue="true"
            android:key="notifications_brewing_status"
            android:title="Brewing Status"
            app:iconSpaceReserved="false"/>
        <!--        Maintenance Reminders-->
        <SwitchPreference
            android:defaultValue="true"
            android:key="notifications_maintenance_reminders"
            android:title="Maintenance Reminders"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>
    <PreferenceCategory android:title="Device" app:iconSpaceReserved="false">

        <Preference
            android:title="Device Information"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>
    <PreferenceCategory android:title="Help and Support" app:iconSpaceReserved="false">

        <Preference android:title="Frequently Asked Questions"
            app:iconSpaceReserved="false"/>

        <Preference android:title="Contact Us"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>