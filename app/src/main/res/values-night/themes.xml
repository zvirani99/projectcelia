<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectCelia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary</item>
        <item name="materialAlertDialogTheme">@style/Theme.ProjectCelia.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/Theme.ProjectCelia.MaterialAlertDialog</item>
    </style>

    <style name="Theme.ProjectCelia.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSurface">@color/onPrimary</item>
        <item name="colorSurface">@color/primary</item>
    </style>

    <style name="Theme.ProjectCelia.Switch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/secondary</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="Theme.ProjectCelia.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colors_textinputlayout</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>

</resources>